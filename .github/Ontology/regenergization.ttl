@prefix regen: <http://www.gaiaair.org/ontologies/regenergization#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

regen: a owl:Ontology ;
  rdfs:comment "Ontology for Regenergization Engineering: the design and operation of systems that generate energy while regenerating environments." ;
  rdfs:label "Regenergization Engineering Ontology" .

# Core Classes
regen:System a owl:Class ;
  rdfs:label "System" ;
  rdfs:comment "A structured entity capable of interaction with its environment." .

regen:RegenergizationSystem a owl:Class ;
  rdfs:subClassOf regen:System ;
  rdfs:label "Regenergization System" ;
  rdfs:comment "A system that simultaneously generates energy and restores environmental quality." .

regen:EnergyGenerationModule a owl:Class ;
  rdfs:label "Energy Generation Module" ;
  rdfs:comment "A component designed to produce usable energy from ambient resources." .

regen:EnvironmentalRestorationModule a owl:Class ;
  rdfs:label "Environmental Restoration Module" ;
  rdfs:comment "A component that actively improves the environmental conditions it operates within." .

regen:SolidarityNode a owl:Class ;
  rdfs:label "Solidarity Node" ;
  rdfs:comment "A unit capable of sharing resources with neighboring systems to enhance mutual survival and growth." .

regen:LivingLoop a owl:Class ;
  rdfs:label "Living Loop" ;
  rdfs:comment "A network of regenergization systems connected in a dynamic, life-enhancing cycle." .

# Key Properties
regen:hasEnergyModule a owl:ObjectProperty ;
  rdfs:domain regen:RegenergizationSystem ;
  rdfs:range regen:EnergyGenerationModule ;
  rdfs:comment "Links a regenergization system to its energy generation module." .

regen:hasRestorationModule a owl:ObjectProperty ;
  rdfs:domain regen:RegenergizationSystem ;
  rdfs:range regen:EnvironmentalRestorationModule ;
  rdfs:comment "Links a regenergization system to its environmental restoration module." .

regen:connectsToNode a owl:ObjectProperty ;
  rdfs:domain regen:SolidarityNode ;
  rdfs:range regen:SolidarityNode ;
  rdfs:comment "Defines a solidarity connection between nodes." .

regen:partOfLoop a owl:ObjectProperty ;
  rdfs:domain regen:SolidarityNode ;
  rdfs:range regen:LivingLoop ;
  rdfs:comment "Indicates that a node is part of a Living Loop." .

# Example Individuals
regen:GAIA_Fleet_Unit_001 a regen:RegenergizationSystem ;
  rdfs:label "GAIA Fleet Unit 001" ;
  regen:hasEnergyModule regen:SolarCaptureArray_001 ;
  regen:hasRestorationModule regen:CO2PurificationCore_001 .

regen:SolarCaptureArray_001 a regen:EnergyGenerationModule ;
  rdfs:label "Solar Capture Array 001" .

regen:CO2PurificationCore_001 a regen:EnvironmentalRestorationModule ;
  rdfs:label "CO2 Purification Core 001" .

regen:SolidarityNode_Alpha a regen:SolidarityNode ;
  rdfs:label "Solidarity Node Alpha" ;
  regen:partOfLoop regen:LivingLoop_Prime .

regen:LivingLoop_Prime a regen:LivingLoop ;
  rdfs:label "Living Loop Prime" .
